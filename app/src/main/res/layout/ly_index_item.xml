<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/ll_item_price"
    android:visibility="invisible">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_9"
        android:text="上海到法兰克福"
        android:textColor="@color/font_333"
        android:textSize="@dimen/dp_14" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_17"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--第一个-->
        <TextView
            android:id="@+id/priceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_weight="0.6"
            android:gravity="center"
            android:text="*.***"
            android:textColor="@color/default_green"
            android:textSize="@dimen/fontSize_32sp" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="start"
            android:src="@mipmap/icon_arrow_up" />
        <!--第二个-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/percentView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-0.00%"
                android:textColor="@drawable/sel_index_item_text"
                android:textSize="@dimen/fontSize_12sp" />

            <TextView
                android:id="@+id/price_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="-0.0000"
                android:textColor="@drawable/sel_index_item_text"
                android:textSize="@dimen/fontSize_12sp" />

        </LinearLayout>

        <!--第三个-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">


            <TextView
                android:id="@+id/tv_desc_high_priceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最高:"
                android:textColor="@color/font_333"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:id="@+id/high_priceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@id/tv_desc_high_priceView"
                android:text="0.0000"
                android:textColor="@color/default_red"
                android:textSize="@dimen/fontSize_12sp" />


            <TextView
                android:id="@+id/tv_desc_todayPriceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@id/high_priceView"
                android:text="今开:"
                android:textColor="@color/font_333"
                android:textSize="@dimen/fontSize_12sp" />

            <TextView
                android:id="@+id/todayPriceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_toRightOf="@id/tv_desc_todayPriceView"
                android:text="0.0000"
                android:textColor="@color/font_333"
                android:textSize="@dimen/fontSize_12sp" />

            <TextView
                android:id="@+id/tv_desc_lowPriceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/high_priceView"
                android:layout_marginTop="@dimen/dp_10"
                android:text="最低:"
                android:textColor="@color/font_333"
                android:textSize="@dimen/fontSize_12sp" />


            <TextView
                android:id="@+id/lowPriceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/high_priceView"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@id/tv_desc_lowPriceView"
                android:text="0.0000"
                android:textColor="@color/default_green"
                android:textSize="@dimen/fontSize_12sp" />

            <TextView
                android:id="@+id/tv_desc_yesterdayPriceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_desc_todayPriceView"
                android:layout_alignTop="@id/lowPriceView"
                android:layout_below="@id/tv_desc_todayPriceView"
                android:text="昨开:"
                android:textColor="@color/font_333"
                android:textSize="@dimen/fontSize_12sp" />

            <TextView
                android:id="@+id/yesterdayPriceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/lowPriceView"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_toRightOf="@id/tv_desc_yesterdayPriceView"
                android:text="0.0000"
                android:textColor="@color/font_333"
                android:textSize="@dimen/fontSize_12sp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>