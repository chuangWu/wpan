<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/white">

    <TextView
    android:layout_marginTop="@dimen/dp_15"
        android:id="@+id/tv_push_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="上海-法兰克福5分"
        android:textColor="@color/font_333"
        android:textSize="@dimen/fontSize_16sp" />

    <TextView
        android:layout_marginBottom="@dimen/dp_15"
        android:id="@+id/tv_push_order_open_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_push_order_name"
        android:layout_below="@id/tv_push_order_name"
        android:layout_marginTop="@dimen/dp_10"
        android:text="建仓"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/fontSize_11sp" />

    <TextView
        android:id="@+id/tv_push_order_open_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_push_order_open_position"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/tv_push_order_open_position"
        android:text="16-12-25 17:25"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/fontSize_11sp" />

    <TextView
        android:id="@+id/tv_push_order_price_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_push_order_open_position"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_toRightOf="@id/tv_push_order_open_time"
        android:text="价位:"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/fontSize_11sp" />

    <TextView
        android:id="@+id/tv_push_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_push_order_open_position"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/tv_push_order_price_desc"
        android:text="7.2017"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/fontSize_11sp" />

