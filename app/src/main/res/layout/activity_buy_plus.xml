<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/ly_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_9"
            android:src="@mipmap/rule2" />

        <TextView
            android:id="@+id/tv_deal_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="白银 "
            android:textColor="@color/color_666666"
            android:textSize="@dimen/fontSize_15sp" />

        <TextView
            android:id="@+id/tv_deal_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3780"
            android:textColor="@color/color_009944"
            android:textSize="@dimen/fontSize_15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" (元 / 千克)"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/fontSize_15sp" />

    </LinearLayout>
    <!--购买金额,数量-->
    <RadioGroup
        android:id="@+id/radiogroup_unit_price"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_unit_price8"
            style="@style/style_radio_button_round"
            android:checked="true"
            android:text="8元\n100g"
            android:textSize="@dimen/dp_15" />

        <RadioButton
            android:layout_marginLeft="@dimen/dp_21"
            android:id="@+id/rb_unit_price80"
            style="@style/style_radio_button_round"
            android:text="80元\n1000g" />

        <RadioButton
            android:layout_marginLeft="@dimen/dp_21"
            android:id="@+id/rb_unit_price2000"
            style="@style/style_radio_button_round"
            android:text="2000元\n4000g" />

        <RadioButton
            android:layout_marginLeft="@dimen/dp_21"
            android:id="@+id/rb_unit_price_full"
            style="@style/style_radio_button_round"
            android:text="满仓" />

    </RadioGroup>


    <include layout="@layout/layout_deal_common" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="@dimen/dp_50"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btn_buy_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_e6e9ed"
            android:text="取消"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp_18" />

        <Button
            android:id="@+id/btn_buy_plus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/default_red"
            android:text="买涨"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>

