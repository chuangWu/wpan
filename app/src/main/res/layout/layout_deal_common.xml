<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_buy_plus">
    <!--总资产-->
    <include layout="@layout/ll_user_total_assets" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_common_back" />

        <TextView
            android:id="@+id/tv_trade_product_name"
            style="@style/style_trade_product_name"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="上海-法兰克福五分时"
            android:textColor="@color/color_00ADB4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@mipmap/icon_arrow_right" />
    </LinearLayout>

    <TextView
        style="@style/style_trade_product_name"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_11"
        android:text="手数"
        android:textColor="@color/font_444" />

    <RadioGroup
        android:id="@+id/radiogroup1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_1"
            style="@style/style_radio_button1"
            android:checked="true"
            android:text="1" />

        <RadioButton
            android:id="@+id/rb_2"
            style="@style/style_radio_button1"
            android:text="2" />

        <RadioButton
            android:id="@+id/rb_3"
            style="@style/style_radio_button1"
            android:text="3" />

        <RadioButton
            android:id="@+id/rb_4"
            style="@style/style_radio_button1"
            android:text="4" />

        <RadioButton
            android:id="@+id/rb_5"
            style="@style/style_radio_button1"
            android:text="5" />

        <RadioButton
            android:id="@+id/rb_6"
            style="@style/style_radio_button1"
            android:text="6" />

        <RadioButton
            android:id="@+id/rb_7"
            style="@style/style_radio_button1"
            android:text="7" />

        <RadioButton
            android:id="@+id/rb_8"
            style="@style/style_radio_button1"
            android:text="8" />

        <RadioButton
            android:id="@+id/rb_9"
            style="@style/style_radio_button1"
            android:text="9" />

        <RadioButton
            android:id="@+id/rb_10"
            style="@style/style_radio_button1"
            android:background="@drawable/sel_btn_buy_plus_normal"
            android:text="10" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_60"
        android:orientation="horizontal">

        <TextView
            style="@style/style_trade_product_name"
            android:text="还有" />

        <TextView
            android:id="@+id/tv_buy_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:45"
            android:textColor="@color/default_red"
            android:textSize="@dimen/fontSize_20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统开始自动平仓"
            android:textColor="@color/font_333"
            android:textSize="@dimen/fontSize_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_earnest_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="标的定金 ¥ 25"
            android:textColor="@color/font_333"
            android:textSize="@dimen/fontSize_14sp" />


        <TextView
            android:id="@+id/tv_earnest_money_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="为当前运费(定金)的25%"
            android:textColor="@color/font_333"
            android:textSize="@dimen/fontSize_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="此次成交额"
            android:textColor="@color/font_333"
            android:textSize="@dimen/fontSize_16sp" />

        <TextView
            android:id="@+id/tv_turnover_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ¥ 85"
            android:textColor="@color/default_red"
            android:textSize="@dimen/fontSize_20sp" />

        <TextView
            android:id="@+id/tv_trade_service_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="手续费 ¥ 15"
            android:textColor="@color/font_666"
            android:textSize="@dimen/fontSize_16sp" />
    </LinearLayout>


    <!--货运,双倍返还,立即充值-->
    <RadioGroup
        android:id="@+id/radiogroup3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--货运-->
        <RadioButton
            android:id="@+id/rb_trade_freight"
            style="@style/style_rbtn_buy_minus_round"
            android:button="@drawable/bg_rb_buy_plus"
            android:checked="true"
            android:text="货运" />

        <RadioButton
            android:id="@+id/rb_trade_return_double"
            style="@style/style_rbtn_buy_minus_round"
            android:layout_marginLeft="@dimen/dp_16"
            android:button="@drawable/bg_rb_buy_plus"
            android:text="双倍返还" />

        <TextView
            android:id="@+id/rb_trade_recharge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_50"
            android:drawablePadding="@dimen/dp_5"
            android:drawableRight="@mipmap/ic_drawer_right"
            android:gravity="center_vertical"
            android:text="立即充值"
            android:textColor="@color/font_333"
            android:textSize="@dimen/fontSize_14sp" />

    </RadioGroup>

    <!--注意事项-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:text="投资有风险，交易需谨慎"
        android:textColor="@color/default_red"
        android:textSize="@dimen/fontSize_13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:text="本平台收取本金15%的建仓手续费，平仓不收取"
        android:textColor="@color/font_999"
        android:textSize="@dimen/fontSize_12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />


</merge>