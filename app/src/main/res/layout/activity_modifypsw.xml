<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/ly_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <com.xinyu.mwp.view.ClearEditText
            android:id="@+id/oldPsw"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/bg_corner_rect"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/font_333"
            android:textColorHint="@color/font_999"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="@dimen/fontSize_14sp" />

        <com.xinyu.mwp.view.ClearEditText
            android:id="@+id/newPsw"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_corner_rect"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/font_333"
            android:textColorHint="@color/font_999"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="@dimen/fontSize_14sp" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@drawable/sel_common_view"
            android:gravity="center"
            android:text="确定"
            android:textColor="@drawable/sel_common_view_text"
            android:textSize="@dimen/fontSize_16sp" />
    </LinearLayout>


</LinearLayout>