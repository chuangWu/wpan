<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    style="@style/navigationbar_style"
    android:gravity="center_vertical">

    <!-- leftImage1 -->

    <ImageView
        android:id="@+id/leftImageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:scaleType="center"
        android:visibility="gone" />
    <!-- leftImage1 -->

    <ImageButton
        android:id="@+id/leftImage"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:minWidth="@dimen/dp_45"
        android:scaleType="center"
        android:src="@drawable/title_left_back_bg_selector" />

    <!-- leftTv1 -->

    <TextView
        android:id="@+id/leftText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_toRightOf="@+id/leftImage"
        android:background="@drawable/sel_comm_title_action"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="@dimen/fontSize_17sp" />

    <!-- 正标题 -->

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_100"
        android:paddingRight="@dimen/dp_100"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="@dimen/fontSize_17sp" />

    <!-- rightImage1 -->

    <ImageButton

        android:id="@+id/rightImage"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:scaleType="center"
        android:visibility="gone" />

    <ImageButton

        android:id="@+id/rightImage1"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/rightImage"
        android:background="@null"
        android:scaleType="center"
        android:visibility="gone" />

    <!-- rightTv1 -->

    <TextView
        android:id="@+id/rightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:text="发布"
        android:textColor="#fff"
        android:textSize="@dimen/fontSize_16sp"
        android:visibility="gone" />

</RelativeLayout>