<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="navigationbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <item name="android:background">@color/default_main_color</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">20dp</item>
        <item name="shadow_left">@mipmap/shadow_left</item>
        <item name="shadow_right">@mipmap/shadow_right</item>
        <item name="shadow_bottom">@mipmap/shadow_bottom</item>
    </style>

    <style name="AppThemeNoTranslucent" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="bottombar_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/dp_1</item>
        <item name="android:minWidth">@dimen/dp_50</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:onClick">onClickSelect</item>
    </style>

    <style name="bottombar_item_icon_style">
        <item name="android:layout_width">@dimen/dp_24</item>
        <item name="android:layout_height">@dimen/dp_24</item>
    </style>

    <style name="bottombar_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/sel_bottombar</item>
        <item name="android:textSize">@dimen/fontSize_10sp</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
    </style>

    <style name="tab_share_order_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@drawable/sel_tab_share_order_text</item>
        <item name="android:textSize">@dimen/fontSize_14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tab_share_order_icon_style">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">7dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/sel_tab_share_order_icon</item>
    </style>

    <style name="tab_user_share_order_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@drawable/sel_tab_user_share_order_text</item>
        <item name="android:textSize">@dimen/fontSize_18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tab_user_share_order_icon_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/sel_tab_user_share_order_icon</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fontSize_16sp</item>
    </style>

    <style name="style_btn_deal_product">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/text_color_selector</item>
        <item name="android:textSize">@dimen/fontSize_16sp</item>
    </style>
    <!--买涨按钮样式 直角-->
    <style name="style_radio_button1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/sel_bg_radio_btn</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/fontSize_12sp</item>
        <item name="android:textColor">@drawable/sel_color_rbtn</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--买涨按钮样式 圆角-->
    <style name="style_radio_button_round">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/sel_exchange_line_btn</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/fontSize_12sp</item>
        <item name="android:textColor">@drawable/sel_color_rbtn</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="style_rbtn_position">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/sel_exchange_line_btn</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/sel_color_rbtn</item>
        <item name="android:textSize">@dimen/fontSize_15sp</item>
    </style>

    <!--普通button样式-->
    <style name="style_rbtn_buy_minus_round">
        <item name="android:layout_width">wrap_content</item>
        <!--<item name="android:background">@drawable/sel_bg_radio_btn_minus</item>-->
        <!--<item name="android:layout_weight">1</item>-->
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/fontSize_14sp</item>
        <item name="android:textColor">@color/font_333</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--买涨按钮样式 直角 radioButton样式-->
    <style name="style_rbtn_buy_minus_rect">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/sel_btn_buy_minus</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/sel_color_rbtn</item>
        <item name="android:textSize">@dimen/fontSize_15sp</item>
    </style>

    <!--交易产品名称-->
    <style name="style_trade_product_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_333</item>
        <item name="android:textSize">@dimen/fontSize_16sp</item>
    </style>

    <style name="custom_dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
